{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "ESNext",                          
     "moduleResolution": "bundler",                  
    "outDir": "./dist",                          
    "rootDir": "./src",                          
    "strict": true,                              
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,                        
    "resolveJsonModule": true,                   
    "isolatedModules": true,                     
    "noEmit": false,                             
    "types": ["node"]                            
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
